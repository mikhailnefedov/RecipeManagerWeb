@page
@model RecipeManagerWeb.Pages.Recipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Recipe.Id" />
            <div class="form-group">
                <label asp-for="Recipe.Title" class="control-label"></label>
                <input asp-for="Recipe.Title" class="form-control" />
                <span asp-validation-for="Recipe.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Amount" class="control-label"></label>
                <input asp-for="Recipe.Amount" class="form-control" />
                <span asp-validation-for="Recipe.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.PortionUnit" class="control-label"></label>
                <select asp-for="Recipe.PortionUnit" class="form-control"></select>
                <span asp-validation-for="Recipe.PortionUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Time" class="control-label"></label>
                <input asp-for="Recipe.Time" class="form-control" />
                <span asp-validation-for="Recipe.Time" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Recipe.Vegetarian" /> @Html.DisplayNameFor(model => model.Recipe.Vegetarian)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Source" class="control-label"></label>
                <input asp-for="Recipe.Source" class="form-control" />
                <span asp-validation-for="Recipe.Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Comment" class="control-label"></label>
                <input asp-for="Recipe.Comment" class="form-control" />
                <span asp-validation-for="Recipe.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

